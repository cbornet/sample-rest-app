{
  "openapi": "3.0.1",
  "paths": {
    "/api/orders/[( ${order.id} )]": {
      "put": {
        "summary": "Update order [( ${order.id} )]",
        "requestBody": {
          "content": {
            "application/json":{
              "schema":{
                "$ref":"#/components/schemas/Order"
              }
            }
          }
        }
      },
      "delete": { "summary": "Delete order [( ${order.id} )]" }
    },
[# th:if="${order.customer}"]
    "/api/customers/[( ${order.customer.id} )]": {
      "get": { "summary": "Get this order's customer (id=[( ${order.customer.id} )])" }
    },
[/]
    "/api/orders": {
      "get": { "summary": "Get all orders" }
    }
  },
  "components": {
    "schemas": {
      "Order": {
        "type": "object",
        "properties": {
          "product": {
            "type": "string"
          },
          "cost": {
            "type": "number"
          },
          "customer": {
            "schema": {
              "$ref":"#/components/schemas/Customer"
            }
          }
        }
      },
      "Customer": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          }
        }
      }
    },
    "securitySchemes": {
      "jwt": {
        "type": "http",
        "description": "JWT Authentication",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      },
      "basic": {
        "type": "http",
        "description": "Basic Authentication",
        "scheme": "basic"
      }
    }
  },
  "security": [
    {
      "jwt": [

      ]
    },
    {
      "basic": [

      ]
    }
  ]
}
