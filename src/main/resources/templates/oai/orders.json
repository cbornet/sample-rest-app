{
  "openapi": "3.0.1",
  "paths": {
    "/api": {
      "get": { "summary": "Home" }
    },
[# th:if="${totalPages} > 1"]
    "[( ${resourceUrl} )]?page=0&size=[( ${pageSize} )][( ${sortQueryParam} )]": {
      "get": { "summary": "Get first page of orders" }
    },
[/]
[# th:if="${currentPage} > 0"]
    "[( ${resourceUrl} )]?page=[( ${currentPage} - 1 )]&size=[( ${pageSize} )][( ${sortQueryParam} )]": {
      "get": { "summary": "Get previous page of orders ([( ${currentPage} - 1 )]/[( ${totalPages} - 1 )]])" }
    },
[/]
[# th:if="${currentPage} < ${totalPages} - 1"]
    "[( ${resourceUrl} )]?page=[( ${currentPage} + 1 )]&size=[( ${pageSize} )][( ${sortQueryParam} )]": {
      "get": { "summary": "Get next page of orders ([( ${currentPage} + 1 )]/[( ${totalPages} - 1 )])" }
    },
[/]
[# th:if="${totalPages} > 1"]
    "[( ${resourceUrl} )]?page=[( ${totalPages} - 1 )]&size=[( ${pageSize} )][( ${sortQueryParam} )]": {
      "get": { "summary": "Get last page of orders" }
    },
[/]
    "/api/orders": {
      "get": {
        "summary": "Get orders",
        "parameters":[
          {
            "name":"page",
            "in":"query",
            "description":"Page number to fetch",
            "schema":{
              "type":"integer"
            }
          },
          {
            "name":"size",
            "in":"query",
            "description":"Size of a page",
            "schema":{
              "type":"integer"
            }
          },
          {
            "name":"sort",
            "in":"query",
            "description":"Sorting criteria in the format: property(,asc|desc). Default sort order is ascending. Multiple sort criteria are supported.",
            "schema":{
              "type":"string"
            }
          }
        ]
      }[# th:if="${totalElements} <= 200"],
      "post": {
        "summary": "Create a new order",
        "description": "Create a new order. The product name will be filled randomly by the server",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Order"
              }
            }
          }
        }
      }
      [/]
    }[# th:each="order, iStat : ${orders}"],
    "/api/orders/[( ${order.id} )]": {
      "get": { "summary": "Get order [( ${order.id} )]" }
    }
    [/]
  },
  "components": {
    "schemas": {
      "Order": {
        "type": "object",
        "properties": {
          "cost": {
            "type": "number"
          },
          "customer": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer"
              }
            }
          }
        }
      }
    },
    "securitySchemes": {
      "jwt": {
        "type": "http",
        "description": "JWT Authentication",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      },
      "basic": {
        "type": "http",
        "description": "Basic Authentication",
        "scheme": "basic"
      }
    }
  },
  "security": [
    {
      "jwt": []
    },
    {
      "basic": []
    }
  ]
}
