{
  "openapi": "3.0.1",
  "info": {
    "title": "rest",
    "version": "0.0.1"
  },
  "servers": [
    {
      "url": "http://localhost:8080/api",
      "description": "Development server"
    },
    {
      "url": "https://localhost:8080/api",
      "description": "Development server with TLS Profile"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "Home",
        "responses": {}
      }
    },
[# th:if="${totalPages} > 1"]
    "[( ${resourceUrl} )]?page=0&size=[( ${pageSize} )][( ${sortQueryParam} )]": {
      "get": {
        "summary": "Get first page of orders",
        "responses": {}
      }
    },
[/]
[# th:if="${currentPage} > 0"]
    "[( ${resourceUrl} )]?page=[( ${currentPage} - 1 )]&size=[( ${pageSize} )][( ${sortQueryParam} )]": {
      "get": {
        "summary": "Get previous page of orders ([( ${currentPage} - 1 )]/[( ${totalPages} - 1 )]])",
        "responses": {}
      }
    },
[/]
[# th:if="${currentPage} < ${totalPages} - 1"]
    "[( ${resourceUrl} )]?page=[( ${currentPage} + 1 )]&size=[( ${pageSize} )][( ${sortQueryParam} )]": {
      "get": {
        "summary": "Get next page of orders ([( ${currentPage} + 1 )]/[( ${totalPages} - 1 )])",
        "responses": {}
      }
    },
[/]
[# th:if="${totalPages} > 1"]
    "[( ${resourceUrl} )]?page=[( ${totalPages} - 1 )]&size=[( ${pageSize} )][( ${sortQueryParam} )]": {
      "get": {
        "summary": "Get last page of orders",
        "responses": {}
      }
    },
[/]
    "/orders": {
      "get": {
        "summary": "Get orders",
        "parameters":[
          {
            "name":"page",
            "in":"query",
            "description":"Page number to fetch",
            "schema":{
              "type":"integer"
            }
          },
          {
            "name":"size",
            "in":"query",
            "description":"Size of a page",
            "schema":{
              "type":"integer"
            }
          },
          {
            "name":"sort",
            "in":"query",
            "description":"Sorting criteria in the format: property(,asc|desc). Default sort order is ascending. Multiple sort criteria are supported.",
            "schema":{
              "type":"string"
            }
          }
        ],
        "responses": {}
      },
      "post": {
        "summary": "Create a new order",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Order"
              }
            }
          }
        },
        "responses": {}
      }
    }[# th:each="order, iStat : ${orders}"],
    "/orders/[( ${order.id} )]": {
      "get": {
        "summary": "Get order [( ${order.id} )]",
        "responses": {}
      }
    }
[/]
  },
  "components": {
    "schemas": {
      "Order": {
        "type": "object",
        "properties": {
          "product": {
            "type": "string"
          },
          "cost": {
            "type": "number"
          },
          "customer": {
            "schema": {
              "$ref":"#/components/schemas/Customer"
            }
          }
        }
      },
      "Customer": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          }
        }
      }
    },
    "securitySchemes": {
      "jwt": {
        "type": "http",
        "description": "JWT Authentication",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      },
      "basic": {
        "type": "http",
        "description": "Basic Authentication",
        "scheme": "basic"
      }
    }
  },
  "security": [
    {
      "jwt": []
    },
    {
      "basic": []
    }
  ]
}
